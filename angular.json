{
	"$schema": "./node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "projects",
	"projects": {
		"site": {
			"root": "",
			"sourceRoot": "src",
			"projectType": "application",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:browser",
					"options": {
						"outputPath": "dist",
						"index": "src/index.html",
						"main": "src/main.ts",
						"tsConfig": "src/tsconfig.app.json",
						"polyfills": "src/polyfills.ts",
						"assets": [
							"src/assets",
							"src/favicon.ico"
						],
						"styles": [
							"src/styles.scss"
						],
						"scripts": [],
						"vendorChunk": true,
						"extractLicenses": false,
						"buildOptimizer": false,
						"sourceMap": true,
						"optimization": false,
						"namedChunks": true
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "anyComponentStyle",
									"maximumWarning": "6kb"
								}
							],
							"optimization": true,
							"outputHashing": "all",
							"sourceMap": false,
							"namedChunks": false,
							"extractLicenses": true,
							"vendorChunk": false,
							"buildOptimizer": true,
							"fileReplacements": [
								{
									"replace": "src/environments/environment.ts",
									"with": "src/environments/environment.prod.ts"
								}
							]
						}
					},
					"defaultConfiguration": ""
				},
				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "site:build"
					},
					"configurations": {
            "production": {
              "buildTarget": "site:build:production"
						}
					}
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "buildTarget": "site:build"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "src/test.ts",
						"karmaConfig": "./karma.conf.js",
						"polyfills": "src/polyfills.ts",
						"tsConfig": "src/tsconfig.spec.json",
						"scripts": [],
						"styles": [
							"src/styles.css"
						],
						"assets": [
							"src/assets",
							"src/favicon.ico"
						]
					}
				}
			}
		},
		"site-e2e": {
			"root": "e2e",
			"sourceRoot": "e2e",
			"projectType": "application",
			"architect": {
				"e2e": {
					"builder": "@angular-devkit/build-angular:protractor",
					"options": {
						"protractorConfig": "./protractor.conf.js",
						"devServerTarget": "site:serve"
					}
				}
			}
		},
		"lacuna-image-viewer": {
			"projectType": "library",
			"root": "projects/lacuna-image-viewer",
			"sourceRoot": "projects/lacuna-image-viewer/src",
			"prefix": "lac",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"tsConfig": "projects/lacuna-image-viewer/tsconfig.lib.json",
						"project": "projects/lacuna-image-viewer/ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "projects/lacuna-image-viewer/tsconfig.lib.prod.json"
						}
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "projects/lacuna-image-viewer/src/test.ts",
						"tsConfig": "projects/lacuna-image-viewer/tsconfig.spec.json",
						"karmaConfig": "projects/lacuna-image-viewer/karma.conf.js"
					}
				}
			}
		}
  },
	"schematics": {
		"@schematics/angular:component": {
			"prefix": "ngx",
			"style": "scss"
		},
		"@schematics/angular:directive": {
			"prefix": "ngx"
		}
	}
}